<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/black"
    android:weightSum="5"
    tools:context=".ActivityIncome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingTop="15dp"
        android:weightSum="2"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etExpense"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/add_expense_amount"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="number"
            android:background="@drawable/edittext_design"
            android:autofillHints="@string/add_expense_amount" />
        <EditText
            android:id="@+id/etItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/expense_item"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:background="@drawable/edittext_design"
            android:autofillHints="@string/expense_item" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:text="@string/dd_mm_yyyy"
            android:drawableEnd="@mipmap/calendar_foreground"
            android:textColorHint="@color/white"
            android:inputType="date"
            android:background="@drawable/edittext_design"
            android:gravity="center|left"
             />
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="8"
            android:padding="15dp"
            android:gravity="top"
            android:textColor="@color/white"
            android:hint="@string/description"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext_design"
            android:autofillHints="@string/description" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:background="@drawable/button_design"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </LinearLayout>

</LinearLayout>