<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark/Night Mode Theme -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F44336</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="LayoutBackground">@color/black</item>
        <item name="TextColor">@color/white</item>
        <item name="ButtonColor">#0574E3</item>
        <item name="TitleBarColor">@color/grayDeep</item>
        <item name="SettingsTitleBarColor">#1C1C1E</item>
        <item name="ListViewDivider">@color/white</item>
        <item name="android:windowAnimationStyle">@style/ThemeChangeAnimation</item>
    </style>

    <!-- Day/Light Mode theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#329835</item>
        <item name="colorPrimaryVariant">#2C852F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F44336</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="LayoutBackground">@color/white</item>
        <item name="TextColor">@color/black</item>
        <item name="ButtonColor">#329835</item>
        <item name="TitleBarColor">#ECECEC</item>
        <item name="SettingsTitleBarColor">#ECECEC</item>
        <item name="ListViewDivider">@color/gray</item>
        <item name="android:windowAnimationStyle">@style/ThemeChangeAnimation</item>
    </style>

    <style name="ThemeChangeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>